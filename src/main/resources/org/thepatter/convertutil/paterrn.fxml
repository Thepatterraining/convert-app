<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.thepatter.convertutil.PatternController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="请输入文本" />
    <TextArea fx:id="inputNum" maxHeight="Infinity" maxWidth="300" promptText="请输入文本" prefRowCount="50"></TextArea>
    <Label fx:id="regexText" text="请输入正则" />
    <TextArea fx:id="regex" maxHeight="Infinity" maxWidth="300" promptText="请输入正则" prefRowCount="2"></TextArea>
    <HBox spacing="20">
        <Button text="判定" onAction="#onHelloButtonClick"/>
        <Button text="home" onAction="#onHomeClick"/>
    </HBox>
    <Label fx:id="infoLabel" />
    <TextArea fx:id="outputNum" maxHeight="Infinity" maxWidth="300" prefRowCount="50"></TextArea>
</VBox>
